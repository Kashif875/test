<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/news_events_thumbnail_iv"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/news_events_pic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.329" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/news_events_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:text="@string/event"
        android:textColor="@color/dark_orange"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/news_events_thumbnail_iv"
        app:layout_constraintStart_toEndOf="@+id/news_events_thumbnail_iv"
        app:layout_constraintTop_toTopOf="@+id/news_events_thumbnail_iv"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/news_events_name_tv"
        android:layout_width="@dimen/o"
        android:layout_height="wrap_content"
        android:text="@string/news_events_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="@+id/news_events_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/news_events_title_tv"
        android:layout_marginEnd="@dimen/_10sdp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/news_events_news_date"
        android:layout_width="@dimen/o"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_133sdp"
        android:text="@string/news_events_day"
        app:layout_constraintBottom_toBottomOf="@+id/news_events_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/news_events_title_tv"
        app:layout_constraintTop_toTopOf="@+id/news_events_title_tv"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/news_events_events_date"
        android:layout_width="@dimen/o"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/news_events_date_time"
        app:layout_constraintEnd_toEndOf="@+id/news_events_name_tv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/news_events_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/news_events_name_tv" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/news_events_events_date"
        app:layout_constraintVertical_bias="1"

        app:srcCompat="@drawable/ic_divider"
        tools:ignore="VectorDrawableCompat" />


</androidx.constraintlayout.widget.ConstraintLayout>